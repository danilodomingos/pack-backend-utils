{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "noEmit": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "declaration": true,
  },
}
